<?xml version="1.0"?>
<launch>

        <!--Nodos de ADJIC-->
        <node pkg="minichal4" type="puzzlebot_kinmatic_model.py" name="simulation"/>
        <node pkg="minichal4" type="localization.py" name="localization"/> 

        <!--Nodo de transformadas-->
        <node pkg="tf2_ros" type="static_transform_publisher" name="map_joint" args="odomPose_x  odomPose_y  odomPose_z  odomPose_roll  odomPose_pitch  odomPose_yaw   map   odom"/>

        <!--Crear robot-->
        <arg name="puzzlebot_sim_model" default="$(find minichal4)/include/puzzlebot_2.urdf"/>
        <param name="robot_description" command="cat $(arg puzzlebot_sim_model)" />

        <!--Nodo ADJIC de rotacion de las llantas-->
        <node pkg="minichal4" type="wheels_rotation.py" name="joints_state"/>

        <!--Robot State publisher-->
        <node pkg="robot_state_publisher" type="robot_state_publisher" name="simulated_state_publisher" output="screen"/>

        <!--Rviz-->
        <arg name="rvizconfig" default="$(find minichal4)/rviz/my_rviz_configuration.rviz" />
        <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true" /> 

</launch>
