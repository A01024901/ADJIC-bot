<?xml version="1.0" encoding="UTF-8"?>
    <launch>
        <!-- World Params -->
        <arg name="world_number" default="1"/>
        <arg name="bug_number" default="2"/>
        <arg name="gui" default="true"/>

        <!-- World -->
        <arg name="world_name" default="puzzlebot_aruco_markers.world"/>

        <!--Rviz-->
        <include file="$(find minichal6)/include/rviz/rviz.launch"/> 

        <!--Gazebo sim-->
        <include file="$(find puzzlebot_gazebo)/launch/puzzlebot_gazebo.launch">
            <arg name="world_name" value="$(arg world_name)"/>
            <arg name="gui" value="$(arg gui)"/>
        </include>

        <!--Minichalenge Nodes-->
        <node pkg="image_transport" type="republish" name="rgb_compress" args="raw in:=/puzzlebot_1/camera/image_raw compressed out:=/image_compressed"/>
        

    </launch>